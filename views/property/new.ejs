<form method="POST" action="<% if (update) { %>
  /properties/<%- property._id %>/update
 <% } else { %>
  /properties/new
<% } %>">
  <label>
    Title:
    <input type="text" name="title" value="<% if (update) { %><%= property.title %><% } %>" />
  </label>
  <label>
    Description:
    <input type="text" name="description" value="<% if (update) { %><%= property.description.join(' ') %><% } %>" />
  </label>
  <label>
    Price:
    <input type="number" name="price" value="<% if (update) { %><%= property.price %><% } %>" />
  </label>
  <label>
    Location:
    <input type="text" name="location" value="<% if (update) { %><%= property.location %><% } %>" />
  </label>
  <button type="submit">
    <% if (update) { %>
      Update recipe
    <% } else { %>
      Create new recipe
    <% } %>
  </button>
</form>
