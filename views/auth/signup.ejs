<!--signup form-->
<div
  class="d-flex justify-content-center align-items-center"
  style="height: 80vh"
>
  <main class="form-signin w-100 m-auto">
    <h1 class="text-center">Sign Up</h1>
    <form method="POST" action="/auth/signup">
      <!-- username input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="form2Example1">Username:</label>
        <input type="text" id="form2Example1" class="form-control"
        name="username" placeholder="Enter your username" <% if(typeof errorMessage !=='undefined') { %> value="<%=userData.username %>" <% }
        %> />
      </div>

      <!-- email input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="form2Example2">Email:</label>
        <input type="email" id="form2Example2" class="form-control" name="email"
        placeholder="Enter your email" required <% if(typeof errorMessage !=='undefined') { %> value="<%=userData.email %>" <% } %> />
      </div>

      <!-- password input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="form2Example2">Password:</label>
        <input type="password" id="form2Example2" class="form-control"
        name="password" placeholder="Enter your password" required
        />
      </div>

      <!-- Submit button -->
      <button type="submit" class="w-100 btn btn-lg btn-dark">Sign up</button>

      <!--alert-->
      <div class="py-2 text-center">
        <% if(typeof errorMessage !== 'undefined') { %>
      <p style="color: red"><%= errorMessage %></p>
      <% } %>
      </div>


      <!-- Register buttons -->
      <div class="text-center py-3">
        <p>Already a member? <a href="/auth/Login">Login</a></p>
      </div>
    </form>
  </main>
</div>

